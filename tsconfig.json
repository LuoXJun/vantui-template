{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types", // 默认值
      "src/types"
    ],
    // 将每个文件作为单独的模块
    "isolatedModules": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    // 生成响应的d.ts文件
    "declaration": false,
    // 存在隐式any时报错
    "noImplicitAny": true,
    // null严格检查
    "strictNullChecks": true,
    // 函数隐式any报错
    "noImplicitThis": true,
    // 所有文件加入use strict
    "alwaysStrict": true,
    // 未使用的变量抛出错误
    "noUnusedLocals": true,
    // 未使用的参数报错
    "noUnusedParameters": true,
    // 不是所有函数都有返回值时报错
    "noImplicitReturns": false,
    // 生成相应的.map文件
    "sourceMap": true,
    // 删除编译后的全部注释
    "removeComments": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "types": ["node", "axios"],
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./*.d.ts"
  ]
}
